@using AdminPanel.Models
@model List<AdminPanel.Models.ProductViewModel>

<h2>Product List</h2>
<div>
    @foreach (var product in Model)
    {
        <div>
            <h1>Name - @product.Name</h1>
            <h2>Description - @product.Description</h2>
            <h2>Category - @product.Category</h2>
            <h2>QuantityInStock - @product.QuantityInStock and Price - @product.Price</h2>
            <a href="@Url.Action("Edit", "Product", new { id = product.Id })">Edit</a>
            <a asp-action="Delete" asp-route-id="@product.Id" onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
        </div>
    }
</div>